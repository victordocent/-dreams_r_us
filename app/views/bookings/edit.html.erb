<h1>Edit your booking</h1>

<div class="container">
  <h1>Fill this new booking for dream <%= @dream.title %></h1>

    <% if flash[:error].present? %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:error] %>
    </div>
    <% end %>

    <%= simple_form_for [@dream, @booking] do |f| %>
    <%= f.input :start_date,
            as: :string,
            label: "Choose a date",
            input_html: { data: { controller: "datepicker" } } %>
    <%= f.button :submit %>
    <% end %>

</div>
