<%= simple_form_for @dream do |f| %>
    <%= f.input :title %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.input :availability %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :category, collection: Dream::CATEGORIES %>
    <%= f.button :submit %>
  <% end %>
