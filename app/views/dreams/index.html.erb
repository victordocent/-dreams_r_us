<h1 class="m-3">Available dreams </h1>

<% if @results %>
  <% @results.each do |dream| %>
    <%= link_to dream_path(dream) do %>
     <div style="height: 150px" class="w-100 my-3 position-relative shadow-sm">
        <h3 class="z-index-2 position-absolute absolution dream_text_effect text-decoration-none text-white ms-2"> <%= dream.title %></h2>
        <div class="position-absolute sliding-background" style="background-image: url('<%= cl_image_path dream.photos[0].key %>')"></div>
    </div>
      <br>
    <% end %>
  <% end %>
<% else %>
  <% @dreams.each do |dream| %>
    <%= link_to dream_path(dream) do %>
     <div style="height: 150px" class="w-100 my-3 position-relative shadow-sm">
        <h3 class="z-index-2 position-absolute absolution dream_text_effect text-decoration-none text-white ms-2"> <%= dream.title %></h2>
        <div class="position-absolute sliding-background" style="background-image: url('<%= cl_image_path dream.photos[0].key %>')"></div>
    </div>
      <br>
    <% end %>
  <% end %>
<% end %>

<%= link_to "new dream", new_dream_path, class: "m-5 btn btn-light text-decoration-none dream_text_effect text-white ms-5" %>
