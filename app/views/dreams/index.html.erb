<h1>My dreams </h1>

<% @dreams.each do |dream|%>
  <div class="card mb-3">
    <%= dream.title %>
    <% dream.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= link_to dream.title, dream_path(dream)%></h5>
      <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
    <%end%>

<button type="button" class="btn btn-dark"><%= link_to "new dream", new_dream_path%></button>
